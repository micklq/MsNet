<?xml version="1.0" encoding="utf-8" ?>
<root xmlns="http://m2sa.net/Schema/SqlMapping">
	<module moduleName="PermissionRepository" dbName="MSNet.SQLServer">
    <sqlWrap  sqlName="Insert"  supportDBType="MySql,SqlServer">
      insert into Permission(Name,Description,ParentId,Sort,Value,CreatedTime,LastModifiedTime)
      values(@Name,@Description,@ParentId,@Sort,@Value,@CreatedTime,@LastModifiedTime);
      select @@IDENTITY;
    </sqlWrap>
    <sqlWrap  sqlName="Update"  supportDBType="MySql,SqlServer">
      update Permission
      set Name=@Name,Description=@Description,ParentId=@ParentId,Sort=@Sort,Value=@Value,LastModifiedTime=@LastModifiedTime
      where PermissionId = @Id;
    </sqlWrap>
    <sqlWrap  sqlName="DeleteById"  supportDBType="MySql,SqlServer">
      delete from Permission where PermissionId = @Id;
    </sqlWrap>
    <sqlWrap  sqlName="SelectById"  supportDBType="MySql,SqlServer">
      select *  from Permission  where PermissionId = @Id;
    </sqlWrap>
    <sqlWrap  sqlName="SelectAll"  supportDBType="MySql,SqlServer">
      select *  from Permission;
    </sqlWrap>
    <sqlWrap  sqlName="SelectRoot"  supportDBType="MySql,SqlServer">
      select *  from Permission where ParentId = 0;
    </sqlWrap>
    <sqlWrap  sqlName="SelectByParentId"  supportDBType="MySql,SqlServer">
      select *  from Permission  where  ParentId = @ParentId;
    </sqlWrap>
    <sqlWrap  sqlName="ExistChildCategory"  supportDBType="MySql,SqlServer">
      select Count(*)  from Permission where  ParentId = @ParentId;
    </sqlWrap>
    <sqlWrap  sqlName="Move"  supportDBType="MySql,SqlServer">
      update Permission
      set ParentId=@ParentId
      where PermissionId = @CategoryId;
    </sqlWrap>
  </module>
</root>

