<?xml version="1.0" encoding="utf-8" ?>
<root xmlns="http://m2sa.net/Schema/SqlMapping">
	<module moduleName="RoleRepository" dbName="MSNet.MySql">
    <sqlWrap  sqlName="Insert"  supportDBType="MySql,SqlServer">
      insert into Role(Name,Description,CreatedTime, LastModifiedTime)
      values(@Name,@Description,@CreatedTime,@LastModifiedTime);
      select @@identity
    </sqlWrap>
    <sqlWrap sqlName="Update" supportDBType="SqlServer, MySql">
      update Role set Name=@Name,Description=@Description,LastModifiedTime=@LastModifiedTime where RoleId = @Id
    </sqlWrap>
    <sqlWrap  sqlName="DeleteById"  supportDBType="MySql,SqlServer">
      update UserPassport set RoleId=0  where RoleId = @Id;
      delete from RolePermission where RoleId = @Id;
      delete from Role where RoleId = @Id;
    </sqlWrap>
    <sqlWrap  sqlName="SelectById"  supportDBType="MySql,SqlServer">
      select *  from Role  where RoleId = @Id;
    </sqlWrap>
    <sqlWrap  sqlName="SelectAll"  supportDBType="MySql,SqlServer">
      select *  from Role;
    </sqlWrap>
  </module>
</root>

