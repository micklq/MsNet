<?xml version="1.0" encoding="utf-8" ?>
<root xmlns="http://m2sa.net/Schema/SqlMapping">
	<module moduleName="RolePermissionRepository" dbName="MSNet.MySql">
    <sqlWrap  sqlName="Insert"  supportDBType="MySql,SqlServer">
      insert into RolePermission(RoleId,PermissionId,ParentPermissionId,PermissionValue)
      values(@RoleId,@PermissionId,@ParentPermissionId,@PermissionValue);
    </sqlWrap>
    <sqlWrap  sqlName="DeleteByRoleId"  supportDBType="MySql,SqlServer">
      delete from RolePermission where RoleId = @RoleId;
    </sqlWrap>
    <sqlWrap  sqlName="DeleteByPermissionId"  supportDBType="MySql,SqlServer">
      delete from RolePermission where PermissionId = @PermissionId;
    </sqlWrap>
    
    <sqlWrap  sqlName="SelectByRoleId"  supportDBType="MySql,SqlServer">
      select *  from RolePermission where RoleId = @RoleId;
    </sqlWrap>
    <sqlWrap  sqlName="PermissionValueExist"  supportDBType="MySql,SqlServer">
      select count(*) from RolePermission where RoleId=@RoleId and PermissionId=@PermissionId and PermissionValue=@PermissionValue;
    </sqlWrap>
    <sqlWrap  sqlName="RolePermissionExist"  supportDBType="MySql,SqlServer">
      select count(*) from RolePermission where RoleId=@RoleId and ParentPermissionId=@ParentPermissionId;
    </sqlWrap>
    <sqlWrap  sqlName="UpdateParentPermissionId"  supportDBType="MySql,SqlServer">
      update RolePermission set ParentPermissionId=@ParentPermissionId
      where PermissionId = @PermissionId;     
    </sqlWrap>
  </module>
</root>

